{
    "extends": [
        "@fieldwork/eslint-config-fieldwork",
        "plugin:flowtype/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "jest": true
    },
    "plugins": [
        "flowtype"
    ],
    "rules": {
        "max-len": [
            "error",
            100,
            2,
            {
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignorePattern": "\\s*<"
            }
        ]
    }
}
